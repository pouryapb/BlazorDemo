@page "/"
@inject HttpClient Http
@using System.Text.Json

<PageTitle>Home Page</PageTitle>

<Carousel />

<MudText class="my-10" Typo="Typo.h4" Align="Align.Center" GutterBottom>@title</MudText>

<MudGrid>
    @foreach (var product in products)
    {
        <MudItem xs="12" sm="6" md="3">
            <ProductListItem Title="@product.Title" Rating="@product.Rating" Price="@product.Price"
                ImageUrl="@product.ImageUrl" />
        </MudItem>
    }
</MudGrid>

@code {
    private Product[] products = { };
    private string title = "";

    protected override async Task OnInitializedAsync()
    {
        title = (await Http.GetFromJsonAsync<LoremRicksum>("http://loremricksum.com/api/?paragraphs=1&quotes=1"))!.Data![0];
        var titles = await Http.GetFromJsonAsync<LoremRicksum>("http://loremricksum.com/api/?paragraphs=20&quotes=1");
        products = Enumerable.Range(0, 20).Select(index =>
        {
            return new Product()
                {
                    Title = titles!.Data![index],
                    Rating = Random.Shared.Next(5),
                    Price = Random.Shared.Next(20000, 2000000).ToString("C"),
                    ImageUrl = $"https://picsum.photos/800/600?diff={index}"
                };
        }).ToArray();
    }
}
